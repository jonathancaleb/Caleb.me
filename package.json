{
  "name": "caleb.me",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "next dev",
    "build": "next build",
    "serve": "next start",
    "typecheck": "tsc",
    "clean": "bun run rm -rf .next node_modules *.tsbuildinfo next-env.d.ts",
    "format:check": "prettier \"**/*\" --ignore-unknown --list-different",
    "format:write": "prettier \"**/*\" --ignore-unknown --list-different --write",
    "lint": "bun lint:js && bun lint:md && bun lint:spell",
    "lint:js": "eslint . --max-warnings 0",
    "lint:md": "markdownlint \"**/*.md\" \".github/**/*.md\" --ignore node_modules",
    "lint:spell": "cspell \"**/*\" --no-summary --no-progress"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*": [
      "cspell --no-must-find-files",
      "prettier --list-different"
    ],
    "**/*.{ts,tsx,js,jsx,cjs,mjs}": [
      "eslint"
    ],
    "**/*.{md,mdx}": [
      "markdownlint"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "dependencies": {
    "@giscus/react": "^2.4.0",
    "@types/eslint-config-prettier": "^6.11.3",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@vercel/analytics": "^1.3.1",
    "classnames": "^2.5.1",
    "html-react-parser": "^5.1.10",
    "next": "^14.2.4",
    "next-pwa": "^5.6.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-fade-in": "^2.0.1",
    "react-icons": "^4.12.0",
    "react-markdown": "^9.0.1",
    "react-syntax-highlighter": "^15.5.0"
  },
  "devDependencies": {
    "@octokit/graphql": "^7.1.0",
    "@octokit/rest": "^20.1.1",
    "@types/ellipsize": "^0.1.3",
    "@types/node": "^20.14.7",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/react-syntax-highlighter": "^15.5.13",
    "autoprefixer": "^10.4.19",
    "ellipsize": "^0.5.1",
    "eslint": "^9.5.0",
    "eslint-config-next": "^14.2.4",
    "feed": "^4.2.2",
    "front-matter": "^4.0.2",
    "markdown-to-txt": "^2.0.1",
    "postcss": "^8.4.38",
    "prettier": "^3.3.2",
    "prettier-plugin-organize-imports": "^3.2.4",
    "reading-time": "^1.5.0",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.5.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsdoc": "^48.2.12",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-regexp": "^2.6.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-tailwindcss": "^3.17.3",
    "globals": "^15.6.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "markdownlint": "^0.34.0",
    "markdownlint-cli": "^0.41.0",
    "prettier-plugin-curly": "^0.2.1",
    "prettier-plugin-packagejson": "^2.5.0",
    "typescript-eslint": "^8.0.0-alpha.30"
  }
}
